<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>WebPageDisplay</display-name>
  <servlet>
    <servlet-name>Controller</servlet-name>
    <servlet-class>com.eric.servlet.Controller</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Controller</servlet-name>
    <url-pattern>/controller</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Main</servlet-name>
    <servlet-class>com.eric.servlet.Main</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Main</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>Index</servlet-name>
    <servlet-class>com.eric.servlet.Index</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  
  <welcome-file-list>
    <welcome-file>controller</welcome-file>
  </welcome-file-list>
  
 <error-page>
  	<error-code>404</error-code>
  	<location>/WEB-INF/include/error404.jsp</location>
  </error-page>
  
</web-app>